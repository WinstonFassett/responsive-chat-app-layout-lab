    // Desktop tab functionality
    const desktopTabs = document.querySelectorAll('.desktop-tab');
    const desktopContents = document.querySelectorAll('[id^="desktop-"]');

    desktopTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const target = tab.getAttribute('data-target');
        
        // Update tab states
        desktopTabs.forEach(t => {
          t.classList.remove('text-blue-600', 'bg-white');
          t.classList.add('text-gray-500', 'hover:text-gray-700');
        });
        tab.classList.remove('text-gray-500', 'hover:text-gray-700');
        tab.classList.add('text-blue-600', 'bg-white');
        
        // Update content visibility
        desktopContents.forEach(content => {
          content.classList.add('hidden');
        });
        document.getElementById(target).classList.remove('hidden');
      });
    });

    // Mobile tab functionality
    const mobileTabs = document.querySelectorAll('.mobile-tab');
    const mobileContents = document.querySelectorAll('[id^="mobile-"]');

    mobileTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const target = tab.getAttribute('data-target');
        
        // Update tab states
        mobileTabs.forEach(t => {
          t.classList.remove('text-blue-600');
          t.classList.add('text-gray-500');
        });
        tab.classList.remove('text-gray-500');
        tab.classList.add('text-blue-600');
        
        // Update content visibility
        mobileContents.forEach(content => {
          content.classList.add('hidden');
          content.classList.remove('flex');
        });
        const targetElement = document.getElementById(target);
        targetElement.classList.remove('hidden');
        targetElement.classList.add('flex');
      });
    });

    // Mobile channel navigation
    const channelButtons = document.querySelectorAll('.mobile-channel-btn');
    const backButton = document.getElementById('back-to-channels');
    const channelTitle = document.getElementById('mobile-channel-title');

    channelButtons.forEach(button => {
      button.addEventListener('click', () => {
        const channelName = button.getAttribute('data-channel');
        
        // Hide channels view, show messages view
        document.getElementById('mobile-channels').classList.add('hidden');
        document.getElementById('mobile-channels').classList.remove('flex');
        document.getElementById('mobile-messages').classList.remove('hidden');
        document.getElementById('mobile-messages').classList.add('flex');
        
        // Update channel title
        channelTitle.textContent = `# ${channelName}`;
      });
    });

    backButton?.addEventListener('click', () => {
      // Hide messages view, show channels view
      document.getElementById('mobile-messages').classList.add('hidden');
      document.getElementById('mobile-messages').classList.remove('flex');
      document.getElementById('mobile-channels').classList.remove('hidden');
      document.getElementById('mobile-channels').classList.add('flex');
    });

    // Auto-expand textarea
    document.querySelectorAll('textarea').forEach(textarea => {
      textarea.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = (this.scrollHeight) + 'px';
      });
    });
